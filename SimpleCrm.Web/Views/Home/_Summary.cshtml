@model Customer
@{
}

<div class="mdl-list__item mdl-list__item--two-line">
    <span class="mdl-list__item-primary-content">
        <i class="material-icons mdl-list__item-avatar">person</i>
        <span>@Model.FirstName @Model.LastName</span>
        <span class="mdl-list__item-sub-title">@Model.Type</span>
    </span>
    <span class="mdl-list__item-secondary-content">
        <a class="mdl-list__item-secondary-action" asp-action="Details" asp-route-id="@Model.Id">
            <i class="material-icons">info</i>
        </a>
        @if (User.Identity.IsAuthenticated) {
                <a class="mdl-list__item-secondary-action" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="material-icons">mode_edit</i>
        </a>
            }
    </span>
</div>