<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

    <environment include="Development">
        <link rel="stylesheet" href="/css/vendor.min.css" />
        <script src="/js/vendor.min.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css"
        asp-fallback-href="/css/vendor.min.css"
        asp-fallback-test-class="mdl-layout__header-row"
        asp-fallback-test-property="display"
        asp-fallback-test-value="flex"
              />

        <script defer src="https://code.getmdl.io/1.3.0/material.min.js"
                asp-fallback-src="/js/vendor.min.js"
                asp-fallback-test="window.MaterialButton"
                ></script>
    </environment>

    <link rel="stylesheet" href="/css/site.css" />
</head>

<body>
    <div class="demo-layout-transparent mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header mdl-layout__header--transparent">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title">Simple CRM</span>
                <div class="mdl-layout-spacer"></div>
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a class="mdl-navigation__link" href="/">Customers</a>
                    <a class="mdl-navigation__link" asp-action="Create" asp-controller="Home">Create</a>
                    @await Component.InvokeAsync("LoginLogout")
                </nav>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                  mdl-textfield--floating-label mdl-textfield--align-right">
                    <label class="mdl-button mdl-js-button mdl-button--icon"
                           for="waterfall-exp">
                        <i class="material-icons">search</i>
                    </label>
                    <div class="mdl-textfield__expandable-holder">
                        <input class="mdl-textfield__input serchInput" type="text" name="sample"
                               id="waterfall-exp" placeholder="Serch &#128269;">
                    </div>
                </div>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Simple CRM</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="/">Customers</a>
                <a class="mdl-navigation__link" asp-action="Create" asp-controller="Home">Create</a>
                @await Component.InvokeAsync("LoginLogout")
            </nav>
        </div>

        <main class="mdl-layout__content">
            @RenderBody()
        </main>

        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                <ul class="mdl-mini-foter__link-list">
                    <li><a href="#">&copy; @DateTime.Now.Year</a></li>
                    <li><a href="#"> SimpleCrm Sample Corp.</a></li>
                    @RenderSection("footer", required: false)
                </ul>
            </div>
            <div class="mdl-mini-footer__right-section">
                <p><a href="https://www.freepik.com/free-photo/workplace-with-smartphone-laptop-black-table-top-view-copyspace-background_7760405.htm#query=work%20table&position=1&from_view=keyword&track=ais">Image by Racool_studio</a> on Freepik</p>
            </div>
        </footer>
    </div>

    <h6>test 5</h6>
    <h6>test 6</h6>

    <script src="/js/vendor-post.min.js"></script>
</body>
</html>
